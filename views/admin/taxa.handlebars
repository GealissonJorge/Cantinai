                <input type="number" step="0.01" name="refri" id="refri" class="form-control w-50"  value="{{refrigerante}}">
            <label for="suco">Novo valor para suco</label>
                <input type="number" step="0.01" name="suco" id="suco" class="form-control w-50" value="{{suco}}">
            <label for="agua">Novo valor para Ã¡gua</label>
                <input type="number" step="0.01" name="agua" id="agua" class="form-control w-50" value="{{agua}}">
            {{else}}
            {{/each}}    
            <button class="btn btn-success mt-4">Atualizar</button>
        </div>
    </div>
    
</form>


