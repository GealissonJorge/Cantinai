{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar Cliente</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/usuarios/editcliente/{{cliente._id}}" method="POST">
            <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" placeholder="Nome" class="form-control" value="{{cliente.nome}}">
            <label for="cpf">CPF</label>
                <input type="text" name="cpf" id="cpf" placeholder="xxx.xxx.xxx-xx" class="form-control" value="{{cliente.cpf}}">
            <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="E-mail" class="form-control" value="{{cliente.email}}">
            <label for="telefone">Telefone</label>
                <input type="tel" name="telefone" id="telefone" placeholder="(00) 00000-0000" class="form-control" value="{{cliente.telefone}}">
            <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" placeholder="" class="form-control" value="{{cliente.senha}}">
            <hr>
            <button class="btn btn-success">Atualizar Cliente</button>
        </form>
    </div>
</div>