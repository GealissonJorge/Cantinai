{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Novo Produto</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/produto/nova" method="POST">
            <label for="descricao">Descrição do Produto</label>
                <input type="text" name="descricao" id="descricao" placeholder="Descrição do Produto" class="form-control">
            <label for="qtd">Quantidade</label>
                <input type="number" name="qtd" id="qtd" class="form-control">
            <label for="valor">Valor</label>
                <input type="number" name="valor" id="valor" class="form-control" step="0.01" min="0.0">
            <hr>
            <button class="btn btn-success">Adicionar Produto</button>
        </form>
    </div>
</div>