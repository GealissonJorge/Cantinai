<h2> <img src="/img/usuario.png" width="50px"> Gerenciar Clientes</h2>

<div  style= "text-align:right;" >
    <a href="/admin"> <img src="/img/voltar.png" width="50px"> </a>
</div>

<hr>

{{#each clientes}}
    <div class="card mt-4">
        <div class="card-body">
            <h5>{{nome}}</h5>
            <p>CPF: {{cpf}}</p>
            <p>Email: {{email}}</p>
            <p>Telefone: {{telefone}}</p>
            <p>senha cripto: {{senha}}</p>
            <p ste>Carteira: R$ {{carteira.saldo}}</p>
             <p>Data de criação: {{date}}</p>          
            <a href="/admin/usuarios/editcliente/{{_id}}"><button class="btn btn-warning">Editar</button></a>
            <form action="/admin/usuarios/deletecliente/{{_id}}" method="POST" class="mt-4">
                <button class="btn btn-danger">Deletar</button>
            </form>
        </div>
    </div>
{{else}} 
    <h5 class="mt-4"> Nenhum cliente cadastrado</h5>   
{{/each}}
