<h2>Gerenciar Produtos</h2>
<hr>
<a href="/admin/produto/add"><button class="btn btn-success">Adicionar</button></a>
<br>
{{#each produtos}}
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">{{descricao}}</h5>
            <p class="card-text">Quantidade: {{quantidade}} </p>
            <p class="card-text">Preço: {{preco}} </p>
            <p>Data de criação: {{date}}</p>
            <a href="/admin/produto/editar/{{id}}"><button class="btn btn-warning">Editar</button></a>
            <a href="/admin/produto/deletar/{{id}}"><button class="btn btn-danger">Deletar</button></a>
        </div>
    </div>
{{else}}    
{{/each}}
