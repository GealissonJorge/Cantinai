<h2> <img src="/img/produto.png" width="50px"> Gerenciar Produtos</h2>

<div  style= "text-align:right;" >
    <a href="/admin"> <img src="/img/voltar.png" width="50px"> </a>
</div>


<hr>
<a href="/admin/produto/add"><button class="btn btn-success">Adicionar</button></a>
<br>
{{#each produtos}}
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">{{descricao}}</h5>
            <p class="card-text">Quantidade: {{quantidade}} </p>
            <p class="card-text">Preço: {{preco}} </p>
            <p>Data de criação: {{date}}</p>
            <a href="/admin/produto/edit/{{id}}"><button class="btn btn-warning">Editar</button></a>
            <form action="/admin/produto/deletar/{{id}}" method="POST" class="mt-4">
                <button class="btn btn-danger">Deletar</button>
            </form>
            
        </div>
    </div>
{{else}}
<h5 class="mt-4">Nenhum produto cadastrado</h5>    
{{/each}}
