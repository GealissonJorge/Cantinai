<h2>Gerenciar Funcionarios</h2>
<hr>
<a href="/admin/usuarios/addfuncionario"><button class="btn btn-success">Adicionar Funcionario</button></a>
{{#each funcionarios}}
    <div class="card mt-4">
        <div class="card-body">
            <h5>{{nome}}</h5>
            <p>CPF: {{cpf}}</p>
            <p>Email: {{email}}</p>
            <p>Telefone: {{telefone}}</p>
            <p>Endereço: {{endereco}}</p>
            <p>Data de criação: {{date}}</p>
            <p>Tipo: Funcionario</p>
            <a href="/admin/usuarios/editfuncionario/{{id}}"><button class="btn btn-warning">Editar</button></a>
            <form action="/admin/usuarios/deletefuncionario/{{id}}" method="POST" class="mt-4">
                <button class="btn btn-danger">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h5 class="mt-4"> Nenhum funcionário cadastrado</h5>
{{/each}}
